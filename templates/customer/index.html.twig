{% extends 'base.html.twig' %}


{% block principal %}
</div>
    <h1>Customer index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Imagen</th>
                <th>Nombre</th>
                <th>Titulo</th>
                <th>Opinion</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for customer in customers %}
            <tr>
                <td>{{ customer.id }}</td>
                <td><img src="{{ asset(customer.getUrlCustomers()) }}" alt="{{ customer.imagen }}" width="100px"></td>
                <td>{{ customer.nombre }}</td>
                <td>{{ customer.titulo }}</td>
                <td>{{ customer.opinion }}</td>
                <td>
                    <a href="{{ path('app_customer_show', {'id': customer.id}) }}">show</a>
                    <a href="{{ path('app_customer_edit', {'id': customer.id}) }}">edit</a>
                    <a href="{{ path('app_customer_delete_json', {'id': customer.id}) }}" class="delete">borrar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_customer_new') }}">Create new</a>
{% endblock %}
